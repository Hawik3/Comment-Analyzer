<Window
    x:Class="Comment_Analyzer.View.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Comment_Analyzer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProgressWindow"
    Width="320"
    Height="160"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock x:Name="textBlock" Margin="20,20,20,20" Text="Comments are being analyzed. Please wait" />
        <ProgressBar
            
            x:Name="progressBar"
            Height="25"
            Margin="20,20,20,20"
            Minimum="0" />
    </StackPanel>
</Window>
